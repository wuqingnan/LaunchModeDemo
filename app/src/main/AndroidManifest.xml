<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shizy.launchmodedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity_"
            android:launchMode="standard"
            android:taskAffinity="launch.standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StandardActivity_"
            android:launchMode="standard"
            android:taskAffinity="launch.standard" />
        <activity
            android:name=".SingleTopActivity_"
            android:launchMode="singleTop"
            android:taskAffinity="launch.singleTop" />
        <activity
            android:name=".SingleTaskActivity_"
            android:launchMode="singleTask"
            android:taskAffinity="launch.singleTask" />
        <activity
            android:name=".SingleInstanceActivity_"
            android:launchMode="singleInstance"
            android:taskAffinity="launch.singleInstance" />
    </application>

</manifest>